<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llMain"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!--<ImageView-->
                <!--android:id="@+id/img_delete"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:src="@mipmap/delete_row"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:visibility="gone"-->
                <!--/>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_delete"
                >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="0.9"
            android:layout_margin="3dp"
            android:padding="2dp"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:weightSum="0.9"
                >
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voucher No: 1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="0.31"
                    android:textColor="@color/DefaultBlack"
                    android:gravity="start"
                    />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="03/10/2019"
                    android:textSize="12sp"
                    android:layout_weight="0.3"
                    />

                <TextView
                    android:id="@+id/tvRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remarks:\nDF of total 12000/- @9.2% interest rate took on 28/09/2019 "
                    android:gravity="start"
                    android:textSize="12sp"
                    android:layout_weight="0.3"
                    android:paddingTop="2dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.28"
                android:weightSum="0.9"
                >

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sai Nath"
                    android:textSize="15sp"
                    android:layout_weight="0.31"
                    android:gravity="center"
                    android:textColor="@color/DefaultBlack"
                    />

                <TextView
                    android:id="@+id/tvMobNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:textSize="13.5sp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:textColor="@color/DefaultBlack"
                    />
                <TextView
                    android:id="@+id/tvRefNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Z12D546"
                    android:textSize="12sp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:weightSum="0.9"
                >

                <TextView
                    android:id="@+id/tvTotalAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total:â‚¹ 1,000.00"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_weight="0.3"
                    android:textColor="@color/DefaultBlack"
                    android:gravity="end"
                    />

                <TextView
                    android:id="@+id/tvNetAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    />

                <TextView
                    android:id="@+id/tvPerDayAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="0.3"
                    android:gravity="end"
                    />
            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>